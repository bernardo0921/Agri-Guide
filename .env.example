# Agri-Guide example environment variables
# Copy this file to `.env` and fill in real values.

# Backend
BACKEND_BASE_URL=https://agriguide-backend-79j2.onrender.com

# OpenWeather (weather service)
OPENWEATHER_API_KEY=
OPENWEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Notifications
NOTIFICATION_POLL_INTERVAL=300

# AI / Voice
AI_SESSION_ID=
AI_SYSTEM_INSTRUCTION_FILE=lib/assets/system_instruction.json

# Language
SUPPORTED_LANGUAGES=english,sesotho
DEFAULT_LANGUAGE=english

# Debug/feature flags
DEBUG_MODE=false
VERBOSE_LOGGING=false

# App settings
API_REQUEST_TIMEOUT=10
FARMING_TIP_CACHE_DURATION=24
TUTORIAL_CACHE_DURATION=48

# File uploads
MAX_UPLOAD_SIZE=50
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
